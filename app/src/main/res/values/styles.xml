<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/ripple_material_light</item>
    </style>

    <style name="TransparentAB" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/colorPrimaryTransparentAB</item>
        <!--Compatibility-->
        <item name="background">@color/colorPrimaryTransparentAB</item>
    </style>

    <style name="AppThemeTransparentAB" parent="@style/AppTheme">
        <item name="android:actionBarStyle">@style/TransparentAB</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--Compatibility-->
        <item name="actionBarStyle">@style/TransparentAB</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
    </style>

    <style name="AppThemeNoAB" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
    </style>

    <style name="ClickRippleDark">
        <item name="android:theme">@style/AppThemeDark</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ClickRippleLight">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SolidColorButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
